{
  "name": "MoonStamp-NFTs",
  "version": "0.1.0",
  "description": "SmartContract for MoonStamp NFTs",
  "private": true,
  "scripts": {
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "develop": "npx hardhat console --network hardhat",
    "console": "npx hardhat console",
    "coverage": "npx hardhat coverage",
    "lint": "npm run lint:sol && npm run lint:js",
    "lint:fix": "npm run lint:js:fix",
    "lint:js": "npx eslint .",
    "lint:js:fix": "npx eslint . --fix",
    "lint:sol": "npx solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "test": "npx hardhat test",
    "flatten": "npx hardhat flatten",
    "gas-report": "env ENABLE_GAS_REPORT=1 npx hardhat test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Stamp-NFTs/contracts.git"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "contracts",
    "erc721",
    "stamp"
  ],
  "author": "Cyril Lapinte",
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/Stamp-NFTs/contracts/issues"
  },
  "homepage": "https://etherscan.io/",
  "dependencies": {
    "@c-layer/common": "^1.3.1"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-truffle5": "2.0.0",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "chai": "^4.3.0",
    "eslint": "^6.5.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-mocha-no-only": "^1.1.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eth-sig-util": "^3.0.0",
    "ethereumjs-util": "^7.0.7",
    "ethereumjs-wallet": "^1.0.1",
    "hardhat": "^2.0.11",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-tracer": "1.0.0-alpha.3",
    "lodash.startcase": "^4.4.0",
    "lodash.zip": "^4.2.0",
    "micromatch": "^4.0.2",
    "mocha": "^8.0.1",
    "solhint": "^3.2.0",
    "solidity-coverage": "^0.7.11",
    "solidity-docgen": "^0.5.3",
    "web3": "^1.3.4"
  }
}
